# CMake CaDiCaL module
#
# It defines the following variables:
# CADICAL_FOUND         - TRUE
# CADICAL_INCLUDE_DIRS  - The CADICAL include directory
# CADICAL_LIBRARIES     - The CADICAL library
# CADICAL_VERSION       - The CADICAL version in the form <major>.<minor>.<patchlevel>
# CADICAL_MAJOR_VERSION - Major version
# CADICAL_MINOR_VERSION - Minor version
# CADICAL_PATCH_VERSION - Patch version

@PACKAGE_INIT@

set(CADICAL_VERSION @PROJECT_VERSION@)
set(CADICAL_MAJOR_VERSION @PROJECT_VERSION_MAJOR@)
set(CADICAL_MINOR_VERSION @PROJECT_VERSION_MINOR@)
set(CADICAL_PATCH_VERSION @PROJECT_VERSION_PATCH@)

set_and_check(CADICAL_INCLUDE_DIR "@PACKAGE_INCLUDE_INSTALL_DIR@")
set(CADICAL_INCLUDE_DIRS "${CADICAL_INCLUDE_DIR}")
list(REMOVE_DUPLICATES CADICAL_INCLUDE_DIRS)
list(REMOVE_ITEM CADICAL_INCLUDE_DIRS "")
set(CADICAL_INCLUDE_DIRS "${CADICAL_INCLUDE_DIRS}" CACHE STRING "Include path for CADICAL and its dependencies")

set_and_check(CADICAL_LIBRARY_DIR @PACKAGE_LIB_INSTALL_DIR@)
find_library(CADICAL_LIBRARIES NAMES cadical.${CADICAL_VERSION} cadical
    PATHS ${CADICAL_LIBRARY_DIR} NO_DEFAULT_PATH)

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(CaDiCaL DEFAULT_MSG CADICAL_INCLUDE_DIRS CADICAL_LIBRARIES)
